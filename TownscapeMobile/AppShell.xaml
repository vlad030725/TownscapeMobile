<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TownscapeMobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TownscapeMobile"
    Shell.FlyoutBehavior="Disabled"
    xmlns:views="clr-namespace:TownscapeMobile.views">
    
    <TabBar>
        <Tab Title="События"
             Icon="online.png">
            <ShellContent ContentTemplate="{DataTemplate views:NewsPage}"></ShellContent>
        </Tab>
        <Tab Title="Карта"
             Icon="map.png">
            <ShellContent ContentTemplate="{DataTemplate views:MapPage}"></ShellContent>
        </Tab>
        <Tab Title="Профиль"
             Icon="user.png">
            <ShellContent ContentTemplate="{DataTemplate views:UserPage}"></ShellContent>
        </Tab>
    </TabBar>
</Shell>
